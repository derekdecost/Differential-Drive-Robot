<launch>
    <!--
        Includes
    -->
    <include file="$(find duckietown_demos)/launch/apriltag_detector.launch"/>

    <!--
        Node ready flags.
    -->
    <group ns="flags">
        <param name="test"                     type="string" value="false" />
        <param name="positional_tracker_ready" type="string" value="false"/>
        <param name="angular_controller_ready" type="string" value="false"/>
        <param name="linear_controller_ready"  type="string" value="false"/>
        <param name="wheel_driver_ready"       type="string" value="false"/>
    </group>

    <!--
        Controller nodes and parameters.
    -->
    <group ns="controllers">
        <!--
            Linear velocity controller.
        -->
        <group ns="linear_velocity">
            <!--
                Linear velocity definictions.
            -->
            <group ns="definitions">
                <group ns="gains">
                    <param name="Kp" type="double" value="0"/>
                    <param name="Ki" type="double" value="0"/>
                    <param name="Kd" type="double" value="0"/>
                </group>
            </group>

            <!--
                Linear velocity topics.
            -->
            <group ns="topics">
                <group ns="inputs">
                    <param name="pid_error" type="string" value="/pid/linear_velocity/error"/>
                </group>

                <group ns="outputs">
                    <param name="pid_out" type="string" value="/pid/linear_velocity/out"/>
                </group>
            </group>

            <!--
                Linear velocity nodes.
            -->
            <node pkg="lab4" name="linear_velocity_controller_node" type="linear_velocity_controller_node.py"/>
        </group>

        <!--
            Angular velocity controller.
        -->
        <group ns="angular_velocity">
            <!--
                Angular velocity definitions.
            -->
            <group ns="definitions">
                <group ns="gains">
                    <param name="Kp" type="double" value="0"/>
                    <param name="Ki" type="double" value="0"/>
                    <param name="Kd" type="double" value="0"/>
                </group>
            </group>

            <!--
                Angular velocity topics.
            -->
            <group ns="topics">
                <group ns="inputs">
                    <param name="pid_error" type="string" value="/pid/angular_velocity/error"/>
                </group>

                <group ns="outputs">
                    <param name="pid_out" type="string" value="/pid/angular_velocity/out"/>
                </group>
            </group>

            <!--
                Angular velocity nodes.
            -->
            <node pkg="lab4" name="angular_velocity_controller_node" type="angular_velocity_controller_node.py"/>
        </group>
    </group>

    <!--
        Drivers for sensor and actuator components.
    -->
    <group ns="drivers">
        <!--
            Driver for the robot wheels.
        -->
        <group ns="wheels">
            <!--
                Wheel driver topics.
            -->
            <group ns="topics">
                <group ns="inputs">
                    <param name="v_pid_in"     type="string" value="/pid/linear_velocity/out"/>
                    <param name="omega_pid_in" type="string" value="/pid/angular_velocity/out"/>
                </group>
            </group>

            <!--
                Wheel driver nodes.
            -->
            <node pkg="lab4" name="wheel_driver_node" type="wheel_driver_node.py"/>
        </group>
    </group>

    <!--
        Trackers for the duckiebot.
    -->
    <group ns="trackers">
        <!--
            Positional tracker for the duckiebot.
        -->
        <group ns="position">
            <!--
                Positional tracker topics.
            -->
            <group ns="topics">
                <group ns="inputs">
                    <param name="apriltag_position" type="string" value="/beezchurger/apriltag_detector_node/detections"/>
                </group>
                <group ns="outputs">
                    <param name="v_error"     type="string" value="/pid/linear_velocity/error"/>
                    <param name="omega_error" type="string" value="/pid/angular_velocity/error"/>
                </group>
            </group>

            <!--
                Positional tracker nodes.
            -->
            <node pkg="lab4" name="positional_tracker_node" type="positional_tracker_node.py"/>
        </group>
    </group>

</launch>